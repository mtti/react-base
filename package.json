{
  "name": "@mtti/react-base",
  "version": "0.0.0",
  "description": "Full-stack TypeScript base project",
  "repository": "github:mtti/react-base",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": ">=12.13.0"
  },
  "main": "dist/server/index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p src/server",
    "build:client": "webpack --mode=development",
    "build:client:production": "webpack --mode=production",
    "lint:client": "echo \"Error: client linting not configured\" && exit 1",
    "lint:server": "cd src/server && eslint '**/*.ts'",
    "test:client": "npm run lint:client && echo \"Error: client tests not configured\" && exit 1",
    "test:server": "npm run lint:server && jest --config ./src/server/jest.config.json",
    "watch:client": "webpack-dev-server --mode=development",
    "start": "node dist/server/index.js",
    "lint": "npm run lint:server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "express": "4.17.1"
  },
  "devDependencies": {
    "@mtti/eslint-config-typescript": "2.0.0",
    "@types/express": "4.17.2",
    "@types/jest": "24.9.0",
    "@types/node": "13.1.8",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/react-redux": "7.1.6",
    "@types/react-router-dom": "5.1.3",
    "@types/redux-logger": "3.0.7",
    "@typescript-eslint/eslint-plugin": "2.16.0",
    "@typescript-eslint/parser": "2.16.0",
    "axios": "0.19.1",
    "bootstrap": "4.4.1",
    "copy-webpack-plugin": "5.1.1",
    "css-loader": "3.4.2",
    "eslint": "6.8.0",
    "eslint-plugin-import": "2.20.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.9.0",
    "jquery": "3.5.0",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.13.1",
    "popper.js": "1.16.0",
    "prop-types": "15.7.2",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-redux": "7.1.3",
    "react-router-dom": "5.1.2",
    "redux": "4.0.5",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.3.0",
    "sass-loader": "8.0.2",
    "source-map-loader": "0.2.4",
    "style-loader": "1.1.3",
    "ts-jest": "24.3.0",
    "ts-loader": "6.2.1",
    "typescript": "3.7.5",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.10.1"
  }
}
